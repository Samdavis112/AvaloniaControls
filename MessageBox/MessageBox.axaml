<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        x:Class="AOSMvvm.Views.MessageBox"
        Title="MessageBox"
        SizeToContent="WidthAndHeight" 
        CanResize="False"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome">
    
    <StackPanel HorizontalAlignment="Center" Orientation="Vertical" Name="root" Margin="5">
        <TextBlock HorizontalAlignment="Center" Name="msg" Text="Test" Margin="5"/>

        <TextBox HorizontalAlignment="Stretch" Name="tb" Margin="5"/>

        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Name="buttonPanel">
            <StackPanel.Styles>
                <Style Selector="Button">
                    <Setter Property="Margin" Value="5"/>
                </Style>
            </StackPanel.Styles>
        </StackPanel>
    </StackPanel>

</Window>
